<%= form_for @post do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>

  </p>
  <p>
    <%= f.label :status %><br>
    <%= f.text_field :status %>

  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to "Home",root_path %>
